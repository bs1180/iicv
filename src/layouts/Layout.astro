---
import { Image } from "astro:assets";
import logo from "./logo.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container mx-auto mb-12">
      <div class="absolute top-0 right-0 md:top-4 md:right-4">
        <a
          href="https://billing.stripe.com/p/login/eVadTA74F7x7gCc000"
          class="block hover:underline text-gray-600/80 text-sm md:text-base p-4"
          >Member login</a
        >
      </div>
      <div class="flex justify-center items-start">
        <a href="/" class="">
          <Image
            src={logo}
            alt="IICV logo"
            class="h-[100px] md:h-[200px] w-[100px] md:w-[200px]"
          />
        </a>
      </div>

      <slot />

      <footer>
        <div class="flex justify-center p-4">
          <a href="/imprint" class="hover:underline text-gray-600/80">Imprint</a
          >
        </div>
      </footer>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #white;
  }
  body {
    border-top-width: 4px;
    border-top-style: solid;
    border-top-color: #f5b142;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
